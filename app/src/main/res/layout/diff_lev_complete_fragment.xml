<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="#c0000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Congratulations!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/level_specific_textview"
        android:layout_margin="5dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:text="You have completed"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hard_level_unlocked_message"
        android:layout_margin="5dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:gravity="center"
        android:text="@string/hard_level_unlocked_message_string"
        android:textColor="#19e015" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReturnToMainFromDiffLev"
        android:layout_margin="5dp"
        android:text="Back to Main Menu"
        android:layout_gravity="center"
        android:textStyle="bold" />

</LinearLayout>